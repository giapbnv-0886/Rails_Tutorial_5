<% provide :title, t("static-pages.signup.title") %>
<h1><%= t "static-pages.signup.title" %></h1>
<div class="row container">
  <div class="form-horizontal">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>
      <div class="form-group">
        <%= f.label I18n.t("static-pages.signup.username") + ":",
	        class: "col-sm-3 control-label" %>
        <%= f.text_field :name, class: "form-controll col-sm-6",
          placeholder: I18n.t("static-pages.signup.username") %>
      </div>
      <div class="form-group">
        <%= f.label I18n.t("static-pages.signup.email") + ":",
          class: "col-sm-3 control-label" %>
        <%= f.email_field :email, class: "form-controll col-sm-6",
          placeholder: I18n.t("static-pages.signup.email") %>
      </div>
      <div class="form-group">
        <%= f.label I18n.t("static-pages.signup.password") + ":",
          class: "col-sm-3 control-label" %>
        <%= f.password_field :password, class: "form-controll col-sm-6",
          placeholder: I18n.t("static-pages.signup.password") %>
      </div>
      <div class="form-group">
        <%= f.label I18n.t("static-pages.signup.confirmpassword") + ":",
	        class: "col-sm-3 control-label" %>
        <%= f.password_field :password_confirmation,
          class: "form-controll col-sm-6",
          placeholder: I18n.t("static-pages.signup.confirmpassword") %>
      </div>
      <div class="col-sm-4"></div>
      <%= f.submit I18n.t("static-pages.signup.signup"), class: "fadeIn fourth button center" %>
      <%= link_to I18n.t("static-pages.signup.login"), login_path %>
    <% end %>
  </div>
</div>
