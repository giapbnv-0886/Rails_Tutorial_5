<% provide :title, t("static-pages.login.title") %>
<h1><%= t "static-pages.login.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label t "sessions.username" %>
        <%= f.text_field :email, class: "form-control",
          placeholder: t("sessions.username") %>
      </div>
      <div class="form-group">
        <%= f.label t "sessions.password" %>
        <%= f.password_field :password, class: "form-control",
          placeholder: t("sessions.password") %>
      </div>
      <div class="form-check">
        <%= f.check_box :remember_me, "class":"form-check-input",
          "id":"exampleCheck1"  %>
        <label class="form-check-label" for="exampleCheck1">
          <%= t "sessions.remember_me" %>
        </label>
      </div>

      <%= f.submit t "sessions.login", class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t("sessions.newuser") + "? " %>
      <%= link_to t("sessions.sign_up"), signup_path %>
      <%= link_to t("sessions.forgot_pass"), new_password_reset_path %>
    </p>
  </div>
</div>
