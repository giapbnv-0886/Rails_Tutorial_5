<header class="nav navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app-name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static-pages.home.title"), root_path %></li>
        <li><%= link_to t("static-pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.users"), '#' %></li>
          <li class="dropdown">
            <%= link_to "#", "class":"dropdown-toggle",
              "data-toggle": "dropdown" do %>
              <%= t "layouts.header.account" %><b class="caret"></b>
              <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"),
                current_user %>
              </li>
              <li><%= link_to t("layouts.header.settings"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"),
                  logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
